<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_grandes"
            android:hint="Grandes" android:inputType="number" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_ninos"
            android:hint="NiÃ±os" android:inputType="number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="19dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_grandes"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/et_bebes"
            android:hint="Bebes" android:inputType="number" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="19dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/et_ninos"/>
    <Button
            android:text="Guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_enviar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="28dp"/>
    <Button
            android:text="Mostrar Datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="387dp"
            android:id="@+id/btn_mostrar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.502"/>
    <android.support.v7.widget.RecyclerView
            android:layout_width="368dp"
            android:layout_height="180dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/et_bebes" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/rvList" android:visibility="visible"/>
</android.support.constraint.ConstraintLayout>